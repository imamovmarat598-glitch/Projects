      "parameters": {
        "jsCode": "const event = $input.first().json;\nconst allFavorites = $('Get Subscribed Users').all();\n\nconst subscribedUsers = [];\n\nfor (const fav of allFavorites) {\n  if (fav.json.city === event.city) {\n    subscribedUsers.push({\n      telegram_id: fav.json.user_id,\n      city: event.city,\n      event_title: event.title,\n      event_description: event.description || '',\n      event_date: event.event_date,\n      event_price: event.price,\n      event_image: event.image_url,\n      event_venue: event.venue_name,\n      event_address: event.venue_address,\n      event_url: event.kudago_url\n    });\n  }\n}\n\nreturn subscribedUsers.map(u => ({ json: u }));"
